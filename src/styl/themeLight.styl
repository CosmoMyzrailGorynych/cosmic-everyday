theme = 'Light';

ff = 'Lato', sans-serif
fhead = 'Lato', sans-serif
fmono = Consolas, Fira Mono, Ubuntu Mono, monospace
fsize = 16px

cyan = darken(#52BAD5, 35%)
magenta = darken(#D6448D, 15%)
yellow = darken(#D5C856, 5%)
red = darken(#EB5542, 25%)
green = darken(#5BD660, 25%)
blue = darken(#4E3CD6, 25%)
orange = darken(#D69458, 25%)
grey = #b4b1bd
bgcolor = #f0f0f0
bglight = #fff
borders = darken(desaturate(lighten(bglight, 15%), 25%), 15%)
ctext = invert(#e6e6e2)
cdarktext = invert(#545258)

@require 'index.styl'

.aKanbanList
    margin 0 0.5rem 0 0
    padding 0.5rem
    background rgba(#ccc, 0.65)
    border-radius 0.5rem
    input.ghost
        background transparent
        filter brightness(65%)
        &:focus, &:hover
            background transparent

.kanban-workspace-aHeader h1
    color cyan

.aColumnMenu > button
    margin 0.75rem