painter-panel
    display block
    height 100%
    position relative
    overflow hidden
    transition 1s ease background
.painter-aPalette
    position absolute
    bottom 1rem
    left 1.5rem
    .aSwatch.big
        width 2.5rem
        height 2.5rem
.painter-Tools
    position absolute
    top 1rem
    left 1.5rem
    .aButtonGroup
        display inline-block
        margin-right 1.5rem
        @media (max-width 1200px)
            margin-right 1rem
    [ref="weightSlider"]
        width 15rem
        @media (max-width 1100px)
            width 10rem
        vertical-align middle
        margin-left 1rem
    @media (max-width 760px)
        #thePainterWidthLabel
            display none
    @media (max-width 670px)
        [ref="weightSlider"]
            position fixed
            left 4rem
            right 0.5rem
            width auto
.painter-aPickerContainter
    position absolute
    bottom 3.5rem
.painter-aBrushPreview
    background bgcolor
    border 2px solid white
    opacity 0.5
    box-sizing border-bo
    {bs}
    transform translate(-50%, -50%)
    position absolute
    left 50%
    top 50%
    border-radius 100%
.painter-Utils
    @extends .aButtonGroup
    position absolute
    right 1.5rem
    top 1rem
    @media (max-width 1200px)
        right 0.5rem
        i
            display none
    @media (max-width 1080px)
        button span
            font-size 0.9rem
    @media (max-width 980px)
        i
            display inline
        button span
            display none
