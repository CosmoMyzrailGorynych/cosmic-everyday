.aKanbanList, .aKanbanCollapsed
    margin-right 1.75em
    margin-top 0rem
    width 20em
    position relative
    .select .aLabel
        margin-top 0
    label-selector .options
        width 10em
    textarea
        opacity 0.65
        &:hover, &:focus, &.hover
            opacity 1
    button
        flex 0 0 auto
    .cards
        min-height 8rem
kanban-column
    .aListName
        width 17rem !important
        margin-top 0
        padding 0
        margin-right 3em
        display block
    .aCard
        cursor pointer
.aKanbanCollapsed
    position relative
    padding-right 0.25rem
    margin 3rem 2rem 0 1rem
    border-radius 1rem
    background rgba(white, 0.27)
    width 0
    i
        color green
        position absolute
        left 50%
        top -2rem
        transform translate(-50%, -50%)
        opacity 0.75
        {trans}
        cursor pointer
        &:hover
            opacity 1
.aKanbanList, .aKanbanList > virtual
    display flex
    flex-flow column nowrap
    .cards
        flex 1 1 auto
        overflow overlay
.aKanbanScroll
    flex 1 1 auto
    overflow auto
.aColumnHeader
    flex 0 0 auto
    padding-bottom 1.5rem
.aColumnMenu
    position absolute
    right 0
    top 0
    & > button
        margin 0
        padding 0.125rem 0.375rem
    .options
        width 16em
.aKanbanCardCreator
    margin 0 0 0.5rem
    flex 0 0 auto
    textarea
        box-sizing border-box
        min-height 4.5rem
        transition none
    textarea.filled
        border-radius br br 0 0
        display block
        border-bottom 0
    button
        border-radius 0 0 0 br
        margin 0
        background mix(bgcolor, cyan, 90%)
        &:hover
            background cyan
    .select
        border-radius 0 0 br 0
        min-height 3.5rem
        line-height 2rem
