::-webkit-scrollbar
    width 0.75rem
    height 0.75rem
::-webkit-scrollbar-track
    background rgba(ctext, 0.17)
    border-radius br
::-webkit-scrollbar-thumb
    border-radius br
    background: rgba(ctext, 0.27)
    {trans}
    &:hover
        background rgba(ctext, 0.5)
    &:active
        background rgba(ctext, 0.35)
::-webkit-scrollbar-track:window-inactive
    background rgba(ctext, 0.1)
::-webkit-scrollbar-corner
    background transparent

button, .button
    cursor pointer
    padding (0.75rem - twopx) 0.75rem
    margin 0.5rem 1rem 0 0
    border-radius br
    background rgba(cyan, 0.14)
    border 2px solid
    color cyan
    line-height 1
    {trans}
    &:hover, &.active
        background cyan
        color white
        border-color cyan
    &:active
        color white
        background yellow
        border-color yellow
        transition none
    &:first-child
        margin-top 0
    i
        vertical-align -1px !important
    i + span
        margin-left 0.35rem
    &.yellow
        background rgba(yellow, 0.14)
    &.red
        background rgba(red, 0.14)
    &.green
        background rgba(green, 0.14)
    &.magenta
        background rgba(magenta, 0.14)
    &.yellow:hover
        border-color yellow
        background yellow
    &.red:hover
        border-color red
        background red
    &.green:hover
        border-color green
        background green
    &.magenta:hover
        border-color magenta
        background magenta
        i.red
            color white
    span
        position relative
        top -0.112em
    &.big
        padding 0.75rem 1rem
        margin 0.5rem 1rem
    &.small
        margin 0.5rem 0.5rem 0 0
.aButtonGroup
    font-size 0
    button
        font-size 1rem
        margin-right 0
        margin-top 0.5rem
        border-radius 0
        & + button
            margin-left -2px
        &:first-child
            border-radius br 0 0 br
        &:last-child
            border-radius 0 br br 0
        &:only-child
            border-radius br
.aVerticalButtonGroup
    button
        margin 0 0 (0 - twopx)
        padding (0.75rem - onepx - twopx)
        border-radius 0
        &:first-child
            border-top-right-radius br
            border-top-left-radius br
        &:last-child
            border-bottom-right-radius br
            border-bottom-left-radius br
    & + &
        margin-top 1rem
    

textarea, select, .select, input[type="text"], input[type="email"], input[type="password"], input[type="number"], input[type="url"]
    background bgcolor
    color ctext
    border 2px solid mix(borders, bglight, 50%)
    box-sizing border-box
    border-radius br
    padding (0.75rem - twopx) 0.75rem
    width 100%
    {trans}
    &:first-child
        margin-top 0
    &.ghost
        background rgba(white, 0)
        border 0
        padding 0
        &:hover
            background rgba(white, 0.35)
    &:focus, &.focus
        box-shadow 0 0 1em rgba(magenta, 0.85)
textarea
    resize vertical

textarea, input[type="text"], input[type="email"], input[type="password"], input[type="number"]
    cursor text

label-selector
    position relative
    display inline-block
    vertical-align middle
.select
    position relative
    display inline-block
    vertical-align middle
    padding-right 2rem
    line-height 1rem
    &:after
        position absolute
        right 0.8rem
        top 50%
        content "î¤“"
        font-family icomoon
        font-size 1rem
        transform translate(0, -50%) rotate(90deg)
        {trans}
    &.active:after
        transform translate(0, -50%) rotate(-90deg)
.options
    @extends .aCard
    position absolute
    top 100%
    margin-top 0.5rem
    box-shadow 0 0 1rem magenta
    z-index 2
    min-width 10rem
    .select + &
        z-index 20

.aFileDrop
    border 2px dashed magenta
    border-radius br
    padding 2rem
    text-align center
    margin-top 1rem
    position relative
    {trans}
    &:hover
        background rgba(magenta, 0.1)
    input
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        opacity 0
        cursor pointer
    i.big
        font-size 6rem
        line-height 6rem
        display inline-block
        margin-bottom 1rem
        color magenta
        {magic}
        {trans}
    &:hover i.big
        transform translate(0, -0.5rem)
    &.wholescreen
        position fixed
        z-index 999
        border 0 none
        border-radius 0
        left 0
        right 0
        top 0
        bottom 0
        background rgba(bglight, 0.65)
        margin 0
        display flex
        flex-flow column nowrap
        justify-content center
        i.big
            line-height 7rem

input[type="checkbox"], input[type="radio"]
    & + span
        margin-left 0.5rem
