.aView
    overflow auto
    position absolute
    left 3.5rem
    top 1.5rem
    bottom 0
    right 0
.aHorisontalWrap
    white-space nowrap
    overflow auto
    width 100%
    & > *
        white-space normal
.navTabs
    display flex
    flex-flow column nowrap
    background bglight
    position absolute
    overflow hidden
    z-index 2
    top 1.5rem
    left 0
    bottom 0
    margin 0
    padding 0
    border-right 1px solid borders
    width 3.5rem
    box-sizing border-box
    {trans}
    &:hover
        width 15rem
        box-shadow 1em 0 2em rgba(0, 0, 0, 0.25)
        overflow-y auto
    li
        flex 0 0 auto
        margin 0
        width 15rem
        padding 1rem 1rem (1rem - onepx)
        border-bottom 1px solid borders
        box-sizing border-box
        list-style none
        cursor pointer
        line-height 1rem
        {trans}
        &.active
            background magenta
            color white
        &:hover
            background cyan
            color white
        &:active
            transition none
            background yellow
            color white
    i, twemoji-icon
        vertical-align middle
    span
        margin-left 1em
        vertical-align middle
        display inline-block
        max-width 10.5rem
    &:hover + .aView .navTabs
        left 11.5rem
    .filler
        flex 1 1 auto
        border-bottom 1px solid borders
kanban-switcher, jumble-switcher, docker-switcher
    .navTabs
        span
            width 10em
            overflow hidden
            text-overflow ellipsis
            display inline-block
            white-space nowrap
            vertical-align top
    .navTabs .icon-media-record
        position relative
        &:after
            position absolute
            top 0.15em
            left 0.15em
            right 0.15em
            bottom 0.15em
            border 3px solid white
            border-radius 100%
            content ""
            display block
.anEmptyViewPlaceholder
    max-width 35rem
    padding 1.5rem
    box-sizing border-box
    text-align center
    margin 3rem auto
    p
        opacity 0.65
        font-size 1.25rem
        line-height 2rem
    i.big
        font-size 7.5rem
        line-height 9rem
        opacity 0.35
        display block

.aCard
    background bglight
    border 1px solid borders
    box-shadow 0 0.15em 0 rgba(black, 0.27)
    padding (0.75rem - onepx) 1rem
    border-radius br
    display block
    color ctext
    margin-bottom 0.75rem
    position relative

h1 + button
    margin-left 1em
    margin-top -0.25em
    position relative

.dimmer
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    z-index 50
    background rgba(bgcolor, 0.73)
    text-align center
    overflow auto
    animation 0.35s ease fade-in 1
    &.loading .icon-star
        font-size 5em
        color yellow
        line-height 10rem

.aModal
    @extends .aCard
    {bbs}
    margin 3rem auto 1.5rem
    padding (1.5rem - onepx)
    max-width 22cm
    text-align left
    transform-origin 50% 50%
    animation 0.35s cubic-bezier(0.39, 0.58, 0.57, 1) appear
    &.expanded
        max-width none
        margin 0 2.5rem 0 0
        border-radius 0
        border-width 0 onepx 0 0
.aModal-aCloseButton, .aModal-anExpandButton, .aModal-aPresentButton
    position fixed
    right 0.5rem
    @media (max-width 1280)
        right 0
    top 2rem
    margin-right 1rem
    color red
    opacity 0.5
    cursor pointer
    {trans}
    &:hover
        opacity 1
    .aModal.expanded &
        opacity 1
.aModal-aPresentButton
    color cyan
    top 5rem

.spacer
    height 1.5rem
    width 1.5rem

.aProgressBar
    position relative
    background rgba(ctext, 0.27)
    border-radius br
    height 1rem
    margin 0.25rem 0
    &.tiny
        height 0.5rem
        margin 0.5rem 0
    div
        background cyan
        border-radius br
        height 100%

.aNavDot
    display inline-block
    width 1rem
    height 1rem
    margin 0.25rem 1rem
    background-color cyan
    border-radius 1rem
    cursor pointer
    {trans}
    &.active, &:active
        background-color yellow
    &:hover
        background-color magenta
.aListRow
    display flex
    flex-flow row nowrap
    align-items center
    margin-bottom 1.5rem
    input
        flex 1 1 auto
    i
        flex 0 0 auto
        margin-left 1.5rem
        cursor pointer

img.aFavico
    width 1rem
    margin-right 0.35rem
    vertical-align -1px

.aToolbox
    position absolute
    width 17rem
    background bglight
    border 1px solid borders
    border-radius br
    padding 0.5rem
    z-index 10
    {bbs}
    ::after
        content ''
        background bglight
        width 0.75rem
        height 0.75rem
        display block
        position absolute
        left 50%
        top -0.425rem
        border 1px solid borders
        border-width 1px 0px 0px 1px
        transform translate(-50%, 0) rotate(45deg)
